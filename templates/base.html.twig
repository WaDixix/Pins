<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Best website forever" />
    <meta name="author" content="Romain Gauvin" />
    <title>Pinterest Â· {% block title %}Home{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    {{ encore_entry_link_tags('app') }}

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('index') }}">Pinterest</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto mb-2 mb-md-0">
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('index') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('create') }}">New Pin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-2">

        {% for type, messages in app.flashes %}
            {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="container text-center mt-5">
        <p class="text-muted">
            <small>
                &copy; 2019 - {{ 'now'|date('Y') }} &middot;
                Built with <span class="text-danger">&hearts;</span> by <a href="https://romaingauvin.fr/">WaDixix</a>
            </small>
        </p>
    </footer>

    {{ encore_entry_script_tags('app') }}

</body>
</html>

