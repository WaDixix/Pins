{% extends 'base.html.twig' %}

{% block title 'Show Pin' %}

{% block body %}
<div class="row pt-3">
    <div class="col-md-6 mx-auto">
        <article class="pin bg-white rounded shadow">
            <div class="mw-100 overflow-hidden">
                <a href="{{ path('show', {'id': pin.id}) }}">
                    <img class="w-100 rounded-top" src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/default.jpg')) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}">
                </a>
            </div>
            <h2 class="h5 pl-3 pt-3"><a class="text-muted text-secondary text-decoration-none" href="{{ path('show', {'id': pin.id}) }}">{{ pin.title }}</a></h2>
            <p class="pl-3 text-muted">
                <small>
                    Submitted 
                    <time datetime="{{ pin.createdAt|date('Y-m-d H:i:s') }}">{{ pin.createdAt|ago }}</time> by WaDixix
                </small>
            </p>

            <p class="pl-3 pb-3">{{ pin.description }}</p>

            <hr>

            <div class="pl-3 pb-3">
                <a href="{{ path('edit', {id: pin.id}) }}" class="btn btn-light">Edit</a>
                <a href="#" onclick="event.preventDefault(); confirm('You are sure?') && document.getElementById('js-pin-delete-form').submit()" class="btn btn-light">Delete</a>
            </div>
        </article>

    </div>
</div>

<form id="js-pin-delete-form" action="{{ path('delete', {id: pin.id}) }}" method="post" style="display:none">
    <input type="hidden" name="_token" value="{{ csrf_token('__pin_deletion') }}">
    <input type="hidden" name="_method" value="DELETE">
</form>

{% endblock %}