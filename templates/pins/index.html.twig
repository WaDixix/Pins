{% extends 'base.html.twig' %}

{% block title 'Find all the best pins on earth!' %}

{% block body %}
    {% if pins|length > 0 %}
        <h1 class="text-center text-muted mb-4">{{ pluralize(pins|length , 'Pin') }}</h1>

        {% for row in pins|batch(3) %}
            <div class="row mb-4">
                {% for pin in row %}
                    <div class="col-md-4">
                        <article class="pin bg-white rounded shadow">
                            <div class="mw-100 overflow-hidden">
                                <a href="{{ path('show', {'id': pin.id}) }}">
                                    <img class="w-100 rounded-top" src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/default.jpg')) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}">
                                </a>
                            </div>
                            <h2 class="h5 pl-3 pt-3"><a class="text-muted text-secondary text-decoration-none" href="{{ path('show', {'id': pin.id}) }}">{{ pin.title }}</a></h2>
                            <p class="pl-3 pb-3 text-muted"><small>Submitted {{ pin.createdAt|ago }}</small></p>
                        </article>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% else %}
        <p class="text-center h1 mt-5">No pins yet. <a href="{{ path('create') }}">Be the first!</a></p>
    {% endif %}

{% endblock %}