{% extends 'base.html.twig' %}

{% block title 'Home' %}

{% block body %}
    <h1>{{ pluralize(pins|length , 'Pin') }}</h1>
    {% for pin in pins %}
    <div class="card mt-3">
        <div class="card-header">
            <h4>{{ pin.title }}</h4>
        </div>
        <div class="card-body">
            <p>{{ pin.description|slice(0,10) }}</p>
            <p>Submitted {{ pin.createdAt|ago }}</p>
            <a href="{{ path('show', {'id': pin.id}) }}" class="btn btn-primary">Voir</a>
        </div>
    </div>
